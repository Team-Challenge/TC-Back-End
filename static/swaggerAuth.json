{
  "swagger": "2.0",
  "info": {
    "title": "Authentication API",
    "description": "API for user authentication",
    "version": "1.0.0"
  },
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/accounts/signup": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Register a new user",
        "operationId": "signup",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/SignupUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User registered successfully"
          }
        }
      }
    },
    "/accounts/signin": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Sign in with user credentials",
        "operationId": "signin",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/SigninUser"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User signed in successfully",
            "headers": {
              "token": {
                "type": "string",
                "description": "Access token"
              }
            },
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string",
                  "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6MSwiZXhwIjoxNjMxNDE3NDk0fQ.1234567890abcdef"
                }
              }
            }
          },
          "404": {
            "description": "User not found or incorrect password"
          }
        }
      }
    }
  },
  "definitions": {
    "SignupUser": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "full_name": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "SigninUser": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  }
}
