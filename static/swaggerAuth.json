            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/ShopPhotoUploadSchema"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Shop photo uploaded successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Shop photo uploaded successfully"
                }
              }
            }
          },
          "404": {
            "description": "Shop not found"
          },
          "400": {
            "description": "Invalid request data"
          }
        }
      },
      "delete": {
        "summary": "Delete shop Photo",
        "tags": ["Shop"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Shop photo deleted successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Shop photo deleted successfully"
                }
              }
            }
          },
          "404": {
            "description": "Shop not found"
          }
        }
      }
    },
    "/shops/shop_banner": {
      "post": {
        "summary": "Upload Shop Banner",
        "tags": ["Shop"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Upload Shop Banner",
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/ShopBannerUploadSchema"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Shop banner uploaded successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Shop banner uploaded successfully"
                }
              }
            }
          },
          "404": {
            "description": "Shop not found"
          },
          "400": {
            "description": "Invalid request data"
          }
        }
      },
      "delete": {
        "summary": "Delete shop banner",
        "tags": ["Shop"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Shop banner deleted successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Shop banner deleted successfully"
                }
              }
            }
          },
          "404": {
            "description": "Shop not found"
          }
        }
      }
    },
    "/accounts/change_password": {
      "post": {
        "summary": "Change Password",
        "tags": ["Accounts"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Password change data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PasswordChangeSchema"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password changed successfully",
            "content": {
              "application/json": {
                "example": {
                  "message": "Password changed successfully"
                }
              }
            }
          },
          "404": {
            "description": "User not found"
          },
          "400": {
            "description": "Invalid request data"
          }
        }
      }
    },
    "/accounts/info": {
      "get": {
        "summary": "Get User Information",
        "tags": ["Accounts"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User information retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserInfoResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/shops/shop_info": {
      "get": {
        "summary": "Get Shop Information",
        "tags": ["Shop"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Shop information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ShopInfo"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },      
  "components": {
    "schemas": {
      "SignupUserSchema": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "full_name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 50
          },
          "password": {
            "type": "string",
            "minLength": 8
          }
        },
        "required": ["email", "full_name", "password"]
      },
      "CreateUpdateShopSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "description": {
            "type": "string",
            "maxLength": 500
          },
          "phone_number": {
            "type": "string"
          },
          "link": {
            "type": "string"
          }
        },
        "required": ["owner_id", "name", "description", "phone_number"]
      },
      "SigninUserSchema": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["email", "password"]
      },
      "PhoneChangeSchema": {
        "type": "object",
        "properties": {
          "phone_number": {
            "type": "string"
          }
        },
        "required": ["phone_number"]
      },
      "FullNameChangeSchema": {
        "type": "object",
        "properties": {
          "full_name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 50
          }
        },
        "required": ["full_name"]
      },
      "ProfilePhotoUploadSchema": {
        "type": "object",
        "properties": {
          "image": {
            "type": "string",
            "format": "binary"
          }
        },
        "required": ["image"]
      },
      "ShopPhotoUploadSchema": {
        "type": "object",
        "properties": {
          "image": {
            "type": "string",
            "format": "binary"
          }
        },
        "required": ["image"]
      },
      "ShopBannerUploadSchema": {
        "type": "object",
        "properties": {
          "image": {
            "type": "string",
            "format": "binary"
          }
        },
        "required": ["image"]
      },
      "PasswordChangeSchema": {
        "type": "object",
        "properties": {
          "current_password": {
            "type": "string"
          },
          "new_password": {
            "type": "string",
            "minLength": 8
          }
        },
        "required": ["current_password", "new_password"]
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "full_name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "joined_at": {
            "type": "string",
            "format": "date-time"
          },
          "is_active": {
            "type": "boolean"
          },
          "phone_number": {
            "type": "string"
          },
          "profile_photo": {
            "type": "string",
            "format": "uri",
            "description": "URL to the user's profile photo"
          }
        }
      },
      "ShopInfo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "owner_id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "shop_photo": {
            "type": "string",
            "format": "uri",
            "description": "URL to the shop"
          },
          "banner_photo": {
            "type": "string",
            "format": "uri",
            "description": "URL to the shop"
          },
          "phone_number": {
            "type": "string"
          },
          "link": {
            "type": "string"
          }
        }
      },
      "UserInfoResponse": {
        "type": "object",
        "properties": {
          "phone_number": {
            "type": "string"
          },
          "full_name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "profile_photo": {
            "type": "string",
            "format": "uri",
            "description": "URL to the user's profile photo"
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "Bearer token"
      }
    }
  }
}